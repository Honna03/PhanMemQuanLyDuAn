<Window x:Class="QuanLyDuAn.Forms.AddNhanVien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyDuAn.Forms"
        mc:Ignorable="d"
        Title="Thêm Nhân Viên" Height="600" Width="800" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid>
        <Label FontSize="28" FontFamily="Arial Black" Margin="30,15,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">Thêm Nhân Viên</Label>
        <Grid Margin="30, 70, 30, 30">
            <!-- Định nghĩa 2 cột -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Định nghĩa các hàng -->
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="90"/>

            </Grid.RowDefinitions>
            <!--hoTen-->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Họ tên *" Foreground="Black" FontSize="14" Margin="0,15,25,0"/>
            <TextBox Grid.Row="1" Grid.Column="0" x:Name="txtHoTen" Background="White" Foreground="Black" BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,0,25,5"/>
            <!--gioiTinh-->
            <!-- Giới tính -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Giới tính *" Foreground="Black" FontSize="14" Margin="0,15,25,0"/>
            <ComboBox Grid.Row="3" Grid.Column="0" x:Name="cbGioiTinh" Background="White" Foreground="Black" 
            BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,0,25,5">
                <ComboBoxItem Content="Nam"/>
                <ComboBoxItem Content="Nữ"/>
            </ComboBox>
            <!-- Ngày sinh -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Ngày sinh *" Foreground="Black" FontSize="14" Margin="0,15,25,0"/>
            <TextBox Grid.Row="5" Grid.Column="0" x:Name="txtNgaySinh" Background="White" Foreground="Black" 
            BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,0,25,5" Text="dd/MM/yyyy"/>

            <!-- Số điện thoại -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Số điện thoại *" Foreground="Black" FontSize="14" Margin="0,15,25,0"/>
            <TextBox Grid.Row="7" Grid.Column="0" x:Name="txtSDT" Background="White" Foreground="Black" 
            BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,0,25,5"/>
            <!-- Email -->
            <TextBlock Grid.Row="8" Grid.Column="0" Text="Email *" Foreground="Black" FontSize="14" Margin="0,15,25,0"/>
            <TextBox Grid.Row="9" Grid.Column="0" x:Name="txtEmail" Background="White" Foreground="Black" 
            BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,0,25,5"/>

            <Button x:Name="btnLuu" Grid.Row="10" Grid.Column="0" FontSize="24"  Background="#008080" Foreground="White" Height="60" Width="340" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontWeight="Bold" Click="btnLuu_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/icon/add.png" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Lưu" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>


            <!-- Cột 2 -->
            <!-- Địa chỉ -->
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Địa chỉ" Foreground="Black" FontSize="14" Margin="25,15,0,0"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtDiaChi" Background="White" Foreground="Black" 
 BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="25,0,0,40" AcceptsReturn="True" Grid.RowSpan="2"/>

            <!-- Lương cơ bản -->
            <TextBlock Grid.Row="2" Grid.Column="1" Text="Lương cơ bản *" Foreground="Black" FontSize="14" Margin="25,15,0,0"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtLuongCoBan" Background="White" Foreground="Black" 
BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="25,0,0,5"/>

            <!-- Tài khoản -->
            <TextBlock Grid.Row="4" Grid.Column="1" Text="Tài khoản *" Foreground="Black" FontSize="14" Margin="25,15,0,0"/>
            <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtTaiKhoan" Background="White" Foreground="Black" 
         BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="25,5,0,5"/>

            <!-- Mật khẩu -->
            <TextBlock Grid.Row="6" Grid.Column="1" Text="Mật khẩu *" Foreground="Black" FontSize="14" Margin="25,15,0,0"/>
            <PasswordBox Grid.Row="7" Grid.Column="1" x:Name="txtMatKhau" Background="White" Foreground="Black" 
             BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="25,0,0,5"/>

            <!-- Vị trí -->
            <TextBlock Grid.Row="8" Grid.Column="1" Text="Chức vụ *" Foreground="Black" FontSize="14" Margin="25,15,0,0"/>
            <ComboBox Grid.Row="9" Grid.Column="1" x:Name="cbQuyen" Background="White" Foreground="Black" 
          BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="25,0,0,5" DisplayMemberPath = "QTen" SelectedValuePath = "QMa" ItemsSource="{Binding quyen}" SelectionChanged="cbQuyen_SelectionChanged">
            </ComboBox>

            <Button x:Name="btn_Huy" Grid.Row="10" Grid.Column="1" Background="#808080" Foreground="White" Height="60" Width="340" Margin="0,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="24" FontWeight="Bold" Click="btn_Huy_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/icon/close.png" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Hủy" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

        </Grid>
    </Grid>
</Window>
