<UserControl x:Class="QuanLyDuAn.Forms.AdjustBaseSalary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyDuAn.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid Background="#ab99f2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="Điều chỉnh lương cơ bản theo quyền" 
                   FontSize="20" FontWeight="Bold" Foreground="White"
                   Margin="10,10,0,10" Grid.Row="0"/>

        <!-- DataGrid hiển thị danh sách quyền -->
        <DataGrid x:Name="dgQuyen" AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  SelectionMode="Single"
                  Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#E0E0E0"
                  RowBackground="White" AlternatingRowBackground="#F9F9F9"
                  Margin="10,0,10,10" Grid.Row="1">
            <DataGrid.Columns>
                <!-- Cột Tên quyền -->
                <DataGridTextColumn Header="Tên quyền" Binding="{Binding QTen}" Width="2*" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="5,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#2D2D2D"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <!-- Cột Mô tả -->
                <DataGridTextColumn Header="Mô tả" Binding="{Binding QMoTa}" Width="2*" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="5,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#2D2D2D"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <!-- Cột Lương cơ bản -->
                <DataGridTextColumn Header="Lương cơ bản" Binding="{Binding QLuongCoBan, StringFormat=N0}" Width="1*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="5,0"/>
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#2D2D2D"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Nút Lưu -->
        <Button Content="Lưu thay đổi" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom"
                Margin="0,0,10,10" 
                Padding="10,5"
                Background="#27AE60" Foreground="White"
                FontWeight="Bold"
                x:Name="btnSave"
                BorderThickness="0" Cursor="Hand"
                Click="btnSave_Click"
                Grid.Row="2"/>
    </Grid>
</UserControl>