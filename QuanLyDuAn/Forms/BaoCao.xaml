<UserControl x:Class="QuanLyDuAn.Forms.BaoCao"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyDuAn.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="900" Background="#FFFFFF">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề và Nút in -->
            <TextBlock Grid.Row="0" Text="Báo Cáo Tiến Độ Dự Án" FontSize="26" FontWeight="Bold" 
                       Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Button Grid.Row="0" Content="In Báo Cáo" Width="120" Height="35" HorizontalAlignment="Right" Margin="0,0,0,20"
                    Background="#3498DB" Foreground="White" FontWeight="SemiBold" BorderThickness="0"
                    Click="PrintReport_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Thông tin dự án -->
            <GroupBox Grid.Row="1" Header="Thông Tin Dự Án" Margin="0,0,0,20" Padding="15" Background="White" BorderBrush="#BDC3C7">
                <StackPanel>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Tên dự án:" FontSize="14" Foreground="#2C3E50" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="ProjectName" IsReadOnly="True" Height="30" Margin="10,0" BorderBrush="#BDC3C7" VerticalContentAlignment="Center"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Mã dự án:" FontSize="14" Foreground="#2C3E50" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="ProjectCode" IsReadOnly="True" Height="30" Margin="10,0" BorderBrush="#BDC3C7" VerticalContentAlignment="Center"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Ngày bắt đầu:" FontSize="14" Foreground="#2C3E50" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="StartDate" IsReadOnly="True" Height="30" Margin="10,0" BorderBrush="#BDC3C7" VerticalContentAlignment="Center"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Ngày kết thúc dự kiến:" FontSize="14" Foreground="#2C3E50" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="EndDate" IsReadOnly="True" Height="30" Margin="10,0" BorderBrush="#BDC3C7" VerticalContentAlignment="Center"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Trạng thái:" FontSize="14" Foreground="#2C3E50" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="ProjectStatus" IsReadOnly="True" Height="30" Margin="10,0" BorderBrush="#BDC3C7" VerticalContentAlignment="Center"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Người tạo:" FontSize="14" Foreground="#2C3E50" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="CreatorName" IsReadOnly="True" Height="30" Margin="10,0" BorderBrush="#BDC3C7" VerticalContentAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Tiến độ dự án -->
            <GroupBox Grid.Row="2" Header="Tiến Độ Dự Án" Margin="0,0,0,20" Padding="15" Background="White" BorderBrush="#BDC3C7">
                <StackPanel>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Phần trăm hoàn thành:" FontSize="14" Foreground="#2C3E50" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0">
                            <ProgressBar x:Name="Progress" Height="25" Width="400" Maximum="100" Foreground="#90EE90" Background="#ECF0F1" BorderThickness="0"/>
                            <TextBlock x:Name="ProgressText" Text="0%" Margin="10,0,0,0" FontSize="14" Foreground="#2C3E50" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Tổng số công việc:" FontSize="14" Foreground="#2C3E50" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="TotalTasks" IsReadOnly="True" Height="30" Margin="10,0" BorderBrush="#BDC3C7" VerticalContentAlignment="Center"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Công việc hoàn thành:" FontSize="14" Foreground="#2C3E50" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="TasksCompleted" IsReadOnly="True" Height="30" Margin="10,0" BorderBrush="#BDC3C7" VerticalContentAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Danh sách công việc -->
            <GroupBox Grid.Row="3" Header="Danh Sách Công Việc" Margin="0,0,0,20" Padding="15" Background="White" BorderBrush="#BDC3C7">
                <ListView x:Name="TaskList" Height="150" BorderBrush="#BDC3C7" SelectionMode="Single">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Mã CV" Width="80" DisplayMemberBinding="{Binding TaskCode}"/>
                            <GridViewColumn Header="Tên công việc" Width="200" DisplayMemberBinding="{Binding TaskName}"/>
                            <GridViewColumn Header="Ngày bắt đầu" Width="120" DisplayMemberBinding="{Binding StartDate}"/>
                            <GridViewColumn Header="Ngày kết thúc" Width="120" DisplayMemberBinding="{Binding EndDate}"/>
                            <GridViewColumn Header="Trạng thái" Width="100" DisplayMemberBinding="{Binding Status}"/>
                            <GridViewColumn Header="Người thực hiện" Width="150" DisplayMemberBinding="{Binding AssignedTo}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>

            <!-- Tài nguyên -->
            <GroupBox Grid.Row="4" Header="Tài Nguyên" Margin="0,0,0,20" Padding="15" Background="White" BorderBrush="#BDC3C7">
                <StackPanel>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Số nhân sự tham gia:" FontSize="14" Foreground="#2C3E50" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="TeamSize" IsReadOnly="True" Height="30" Margin="10,0" BorderBrush="#BDC3C7" VerticalContentAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Ghi chú -->
            <GroupBox Grid.Row="5" Header="Ghi Chú" Margin="0,0,0,20" Padding="15" Background="White" BorderBrush="#BDC3C7">
                <TextBox x:Name="Notes" AcceptsReturn="True" AcceptsTab="True" Height="100" BorderBrush="#BDC3C7" VerticalScrollBarVisibility="Auto"/>
            </GroupBox>
        </Grid>
    </ScrollViewer>
</UserControl>