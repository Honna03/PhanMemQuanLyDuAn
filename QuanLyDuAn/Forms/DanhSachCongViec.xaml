<UserControl x:Class="QuanLyDuAn.Controls.DanhSachCongViec"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuanLyDuAn.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="DanhSachCongViec1_Loaded">
    <Grid Background="#ab99f2">
        <!-- Tiêu đề -->
        <TextBlock Text="Danh sách Công việc" 
                   FontSize="20" FontWeight="Bold" Foreground="White"
                   Margin="10,10,0,0"/>

        <Grid VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0, 10, 10, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <!-- Nút Thêm mới -->
            <Button Grid.Column="0"
                    Content="Công việc đã tạo" 
                    VerticalAlignment="Center"
                    Padding="10,5"
                    Background="#27AE60" Foreground="White"
                    FontWeight="Bold"
                    x:Name="btnDaTao"
                    BorderThickness="0" Cursor="Hand" Click="btnDaTao_Click" Grid.ColumnSpan="2" Height="28" Margin="-31,0,10,0" HorizontalAlignment="Center" />

            <Button Grid.Column="2"
                    Content="Công việc được giao" 
                    VerticalAlignment="Center"
                    Padding="10,5"
                    Background="#27AE60" Foreground="White"
                    FontWeight="Bold"
                    x:Name="btnDuocGiao"
                    BorderThickness="0" Cursor="Hand" Click="btnDuocGiao_Click" HorizontalAlignment="Center" Width="159" Height="28" Grid.ColumnSpan="3" Margin="0,0,12,0"/>

            <Button Grid.Column="5"
                    Width="120"
                    Content="+ Thêm mới" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Padding="10,5"
                    Background="#27AE60" Foreground="White"
                    FontWeight="Bold"
                    x:Name="btn_AddCongViec"
                    BorderThickness="0" Cursor="Hand" Click="btn_AddCongViec_Click_1" Height="28"/>
        </Grid>

        <!-- Grid chứa DataGrid và phân trang -->
        <Grid Margin="0,50,0,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <!-- DataGrid -->
                <RowDefinition Height="31.2"/>
                <!-- Phân trang và tổng số bản ghi -->
            </Grid.RowDefinitions>

            <!-- DataGrid -->
            <DataGrid Name="dgCongViec" AutoGenerateColumns="False" IsReadOnly="True"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                      GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#E0E0E0"
                      RowBackground="White" AlternatingRowBackground="#F9F9F9"
                      Margin="0,0,0,19" MouseDoubleClick="dgCongViec_MouseDoubleClick">
                <DataGrid.Columns>
                    <!-- Cột STT -->
                    <DataGridTextColumn Header="Mã công việc" Binding="{Binding Path=CvMa}" Width="0.5*" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Cột Tên công việc -->
                    <DataGridTextColumn Header="Tên công việc" Binding="{Binding Path=CvTen}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Cột Tên dự án -->
                    <DataGridTextColumn Header="Tên dự án" Binding="{Binding Path=DaTen}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Cột Mô tả -->
                    <DataGridTextColumn Header="Mô tả" Binding="{Binding Path=CvMoTa}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Cột Ngày bắt đầu -->
                    <DataGridTextColumn Header="Thời gian bắt đầu" Binding="{Binding Path=CvBatDau, StringFormat={}{0:dd/MM/yyyy}}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Cột Ngày kết thúc -->
                    <DataGridTextColumn Header="Thời gian kết thúc" Binding="{Binding Path=CvKetThuc, StringFormat={}{0:dd/MM/yyyy}}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Cột Người tạo việc -->
                    <DataGridTextColumn Header="Người tạo việc" Binding="{Binding Path=NguoiTao}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Cột Người nhận việc -->
                    <DataGridTextColumn Header="Người nhận việc" Binding="{Binding Path=NguoiNhan}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Cột Trạng thái -->
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Path=TrangThai}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Cột Thời gian hoàn thành -->
                    <DataGridTextColumn Header="Thời gian hoàn thành" Binding="{Binding Path=ThoiGianHoanThanh}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <!-- Cột Người chịu trách nhiệm -->
                    <!--
                    <DataGridTextColumn Header="Thành viên" Binding="{Binding ThanhVien}" Width="1*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                       <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                      </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    -->
                    <!-- Cột Người tạo công việc -->
                    <!--
                    <DataGridTextColumn Header="Người tạo công việc" Binding="{Binding NguoiTaoCongViec}" Width="1*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#2D2D2D"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    -->
                    <!-- Cột Lịch sử cập nhật -->
                    <!--
                    <DataGridTextColumn Header="Lịch sử cập nhật" Binding="{Binding LichSuCapNhat}" Width="1*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#2D2D2D"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="5"/>
                         </Style>
                      </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>-->
                </DataGrid.Columns>
            </DataGrid>

            <!-- Phân trang cho DataGrid -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Row="1">
                <Button x:Name="btnPrevPageCongViec" Content="&lt;" Width="25" Height="25" Margin="0,0,0,5" Click="btnPrevPageCongViec_Click"/>
                <TextBlock x:Name="txtPaginationCongViec" Text="1 trong 1" VerticalAlignment="Center" Margin="5,0,5,5"/>
                <Button x:Name="btnNextPageCongViec" Content="&gt;" Width="25" Height="25" Margin="0,0,0,5" Click="btnNextPageCongViec_Click"/>
            </StackPanel>

            <!-- Tổng số bản ghi -->
            <TextBlock x:Name="txtTotalRecords" Text="Tổng số bản ghi: 0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,5" Foreground="White" FontSize="14"/>
        </Grid>
    </Grid>
</UserControl>