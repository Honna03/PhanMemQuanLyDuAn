<Window x:Class="QuanLyDuAn.Forms.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyDuAn.Forms"
        mc:Ignorable="d"
        Title="Đăng Nhập" Height="650" Width="500" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Background="Transparent" AllowsTransparency="True"
        WindowStyle="None">
    <Window.Resources>
        <!-- Màu sắc và tài nguyên chung -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF7B68EE"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#FF483D8B"/>
        <SolidColorBrush x:Key="TextColor" Color="White"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#FFFF5555"/>
        <SolidColorBrush x:Key="LinkColor" Color="#FF87CEEB"/>

        <!-- Style cho TextBox -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Error">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ErrorColor}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="0,0,0,2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho PasswordBox -->
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Error">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ErrorColor}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="0,0,0,2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho Button -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF8A77FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF5A4FCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho Link -->
        <Style x:Key="LinkStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource LinkColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho CheckBox -->
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border Background="#FF2E1E3B" CornerRadius="20" Padding="20" Margin="10" MouseDown="Border_MouseDown">
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF2E1E3B" Offset="0"/>
                    <GradientStop Color="#FF483D8B" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Nút đóng -->
            <Button x:Name="CloseButton" Content="X" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0"
                    Background="Red" Foreground="White" FontSize="14" Click="CloseButton_Click"/>

            <!-- Title -->
            <StackPanel x:Name="TitlePanel" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="tb_Welcome" Text="WELCOME" Foreground="{StaticResource TextColor}" FontSize="36" FontWeight="Bold" 
                           HorizontalAlignment="Center" Cursor="Hand" MouseDown="tb_Welcome_MouseDown"/>
                <TextBlock Text="Quản Lý Dự Án" Foreground="{StaticResource TextColor}" FontSize="18" Opacity="0.7" 
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Login Form -->
            <StackPanel x:Name="LoginForm" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Visibility="Hidden">
                <TextBlock Text="Đăng Nhập" Foreground="{StaticResource TextColor}" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <!-- Username -->
                <TextBlock Text="Tài khoản" Foreground="{StaticResource TextColor}" FontSize="16" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" Style="{StaticResource TextBoxStyle}" Tag="Normal">
                    <TextBox.Text>
                        <Binding Path="Username" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <DataErrorValidationRule ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <!-- Password -->
                <TextBlock Text="Mật khẩu" Foreground="{StaticResource TextColor}" FontSize="16" Margin="0,20,0,5"/>
                <Grid>
                    <PasswordBox x:Name="PasswordBox" Style="{StaticResource PasswordBoxStyle}" Tag="Normal"/>
                    <Button x:Name="ShowPasswordButton" Width="20" Height="20" HorizontalAlignment="Right" Margin="0,0,10,0" Background="Transparent" BorderThickness="0">
                        <Image Source="/Resources/eye_icon.png" Width="16" Height="16"/>
                    </Button>
                </Grid>

                <!-- Remember Me and Forget Password -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- <CheckBox x:Name="RememberMeCheckBox" Grid.Column="0" Content="Ghi nhớ tôi" Style="{StaticResource CheckBoxStyle}"/>-->
                    <TextBlock Grid.Column="1" Text="Quên mật khẩu?" Style="{StaticResource LinkStyle}" 
                               HorizontalAlignment="Right" MouseDown="ForgetPassword_MouseDown"/>
                </Grid>

                <!-- Login Button -->
                <Button x:Name="btn_Login" Content="ĐĂNG NHẬP" Style="{StaticResource ButtonStyle}" Margin="0,30,0,10" Height="50" Width="200" 
                        MouseEnter="btn_Login_MouseEnter" MouseLeave="btn_Login_MouseLeave" Click="btn_Login_Click"/>

                <!-- Loading Indicator -->
                <ProgressBar x:Name="LoadingIndicator" IsIndeterminate="True" Width="100" Height="5" Margin="0,10,0,0" 
                             Visibility="Collapsed" Foreground="{StaticResource PrimaryColor}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>