<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyDuAn.Forms"
        xmlns:materialDesignMahApps="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="QuanLyDuAn.Forms.Login"
        mc:Ignorable="d"
        Title="Login" Height="550" Width="800" WindowStartupLocation="CenterScreen">
	<Grid>
		<Label x:Name="label" Background="#FFF7EEEE">
			<materialDesignMahApps:PackIcon/>
		</Label>
		<Grid Margin="70, 90, 70,90">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- Định nghĩa các hàng -->
			<Grid.RowDefinitions>
				<RowDefinition Height="35"/>
				<RowDefinition Height="55"/>
				<RowDefinition Height="35"/>
				<RowDefinition Height="35"/>
				<RowDefinition Height="55"/>

			</Grid.RowDefinitions>

			<TextBlock Grid.Row="0" Grid.Column="0" Text="Tài khoản*" Foreground="Black" FontSize="14"/>
			<TextBox Grid.Row="1" Grid.Column="0" x:Name="txtTaiKhoan" Background="White" Foreground="Black" BorderBrush="#E0E0E0"
            BorderThickness="1" Padding="5"/>

			<TextBlock Grid.Row="3" Grid.Column="0" Text="Mật khảu*" Foreground="Black" FontSize="14"/>
			<PasswordBox Grid.Row="4" Grid.Column="0" x:Name="txtMatKhau" Background="White" Foreground="Black" BorderBrush="#E0E0E0"
            BorderThickness="1" Padding="5"/>
		</Grid>
		<Grid Margin="70, 40, 70, 70" VerticalAlignment="Bottom">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- Định nghĩa các hàng -->
			<Grid.RowDefinitions>
				<RowDefinition Height="80"/>
			</Grid.RowDefinitions>
			<Button x:Name="btnDangNhap" Grid.Row="0" Grid.Column="1" FontSize="24"  Background="#008080" Foreground="White" Height="80" Width="345" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontWeight="Bold" Click="btnDangNhap_Click">
				<StackPanel Orientation="Horizontal">
					<Image Source="/icon/add.png" Width="20" Height="20" Margin="0,0,10,0"/>
					<TextBlock Text="Lưu" VerticalAlignment="Center"/>
				</StackPanel>
			</Button>
		</Grid>
	</Grid>
</Window>
