<Window x:Class="QuanLyDuAn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:func="clr-namespace:QuanLyDuAn.functions"
        Title="Trang chủ" Height="450" Width="800" WindowState="Maximized">
    <Window.Resources>
        <!-- logo -->
        <func:ImagePathToBitmapConverter x:Key="ImageConverter" />
        <!-- Gradient Background Brush -->
        <LinearGradientBrush x:Key="MyGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4776e6" Offset="0"/>
            <GradientStop Color="#8e54e9" Offset="1"/>
        </LinearGradientBrush>

        <!-- Button Style: Transparent Background + White Foreground -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#80C4E9" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ContextMenu với Gradient và loại bỏ khoảng trắng -->
        <Style TargetType="ContextMenu">
            <Setter Property="Background" Value="{StaticResource MyGradientBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ItemsPresenter Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- MenuItem Style: Loại bỏ khoảng trắng thừa -->
        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <ContentPresenter ContentSource="Icon" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <ContentPresenter ContentSource="Header" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Window.Resources>
    <Grid Background="{StaticResource MyGradientBrush}">
        <!-- Grid chính chia Sidebar và Main Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="167*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="{StaticResource MyGradientBrush}" Height="434" VerticalAlignment="Bottom">
            <Button x:Name="logoButton" Click="Logo_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Center" VerticalContentAlignment="Center" Height="39.5">
                <Image Width="40" Height="40" Source="{Binding CtyLogo, Converter={StaticResource ImageConverter}}" Stretch="Uniform" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            </Button>
            <StackPanel Margin="0,10,10,10">
                <Button x:Name="btn_QLDA" Background="Transparent" Foreground="White" BorderThickness="0" Padding="5" HorizontalContentAlignment="Left" FontSize="14" Click="btn_QLDA_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/icon/task.png" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Quản lý dự án" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btn_QLCV" Background="Transparent" Foreground="White" BorderThickness="0" Padding="5" HorizontalContentAlignment="Left" FontSize="14" Click="btn_QLCV_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/icon/job.png" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Quản lý công việc" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btn_KPI" Background="Transparent" Foreground="White" BorderThickness="0" Padding="5" HorizontalContentAlignment="Left" FontSize="14" Click="btn_KPI_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/icon/kpi.png" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="KPI" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btn_NhanVien" Background="Transparent" Foreground="White" BorderThickness="0" Padding="5" HorizontalContentAlignment="Left" FontSize="14" Click="btn_NhanVien_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/icon/staff.png" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Nhân viên" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btn_Luong" Background="Transparent" Foreground="White" BorderThickness="0" Padding="5" HorizontalContentAlignment="Left" FontSize="14" Click="btn_Luong_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/icon/money.png" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Lương" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btn_Infor" Background="Transparent" Foreground="White" BorderThickness="0" Padding="5" HorizontalContentAlignment="Left" FontSize="14" Click="btn_Infor_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/icon/info.png" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Thông tin" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <!-- Header -->
                <RowDefinition/>
                <!-- Nội dung chính -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Background="{StaticResource MyGradientBrush}" Margin="-11,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Ô tìm kiếm (bên trái) -->
                <Border Grid.Column="0" Background="{StaticResource MyGradientBrush}" CornerRadius="15" Height="30" HorizontalAlignment="Stretch" Margin="10">
                    <TextBox x:Name="SearchBox" Text="Tìm kiếm..." Foreground="White" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Padding="5" FontSize="14" GotFocus="SearchBox_GotFocus" LostFocus="SearchBox_LostFocus" TextChanged="SearchBox_TextChanged" Margin="-7,0,0,0"/>
                </Border>

                <!-- Hiển thị giờ (giữa) -->
                <TextBlock x:Name="CurrentTime" Grid.Column="1" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <!-- Nút "Thêm dự án", chuông thông báo, tên người dùng, icon user (bên phải) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10,0">
                    
                    <!-- Chuông thông báo -->
                    <Grid Margin="0,0,10,0">
                        <Button x:Name="NotificationButton" Background="Transparent" BorderThickness="0" Padding="0" Click="NotificationButton_Click">
                            <TextBlock Text="🔔" Foreground="White" FontSize="22" VerticalAlignment="Center"/>
                        </Button>

                        <!-- Badge đỏ -->
                        <Border x:Name="NotificationBadge" Background="Red" CornerRadius="10" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Collapsed">
                            <TextBlock x:Name="NotificationCountText" Text="0" Foreground="White" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <Popup x:Name="NotificationPopup" PlacementTarget="{Binding ElementName=NotificationButton}" Placement="Bottom" StaysOpen="False" AllowsTransparency="True" PopupAnimation="Slide">
                        <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5" Width="280">
                            <StackPanel>
                                <TextBlock Text="Thông báo" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                                <ListBox x:Name="NotificationList" MaxHeight="300" SelectionChanged="NotificationList_SelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border x:Name="ItemBorder" Background="Transparent" Padding="5">
                                                <StackPanel ToolTip="{Binding TbThoiGian, StringFormat='Thời gian: {0:dd/MM/yyyy}'}">
                                                    <!-- Nội dung thông báo -->
                                                    <TextBlock Text="{Binding TbNoiDung}" TextWrapping="Wrap" FontSize="12" FontWeight="SemiBold"/>
                                                    <!-- Tên công việc -->
                                                    <TextBlock Text="{Binding TenCongViec, StringFormat='Công việc: {0}'}" FontSize="10" Foreground="Gray" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                                    <!-- Người gửi -->
                                                    <TextBlock Text="{Binding TenNguoiGui, StringFormat='Người gửi: {0}'}"
                                           FontSize="10"
                                           Foreground="Gray"
                                           Margin="0,2,0,0"/>
                                                    <!-- Thời gian -->
                                                    <TextBlock Text="{Binding TbThoiGian, StringFormat='Thời gian: {0:dd/MM/yyyy}'}"
                                           FontSize="10"
                                           Foreground="Gray"
                                           Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Border>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding TbTinhTrang}" Value="False">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="#FFFFF2CC"/>
                                                    <!-- Màu vàng nhạt -->
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </Popup>


                    <TextBlock x:Name="UserName" Text="aaâaaaaaaadfasdfasdfsdffasfsfsadfsadfasdfbbbaa"
                Foreground="White" FontSize="14" VerticalAlignment="Center"
                MaxWidth="200" TextTrimming="CharacterEllipsis" Margin="0,0,10,0"/>
                    <Button x:Name="UserButton" Background="Transparent" BorderThickness="0" Padding="0" Click="UserButton_Click">
                        <TextBlock x:Name="i_User" Text="👤" Foreground="White" FontSize="22" VerticalAlignment="Center"/>
                        <Button.ContextMenu>
                            <ContextMenu Width="120" Placement="Bottom" VerticalOffset="8" HorizontalOffset="11">
                                <MenuItem x:Name="btn_DangXuat" Header="Đăng xuất" Margin="5,0,0,10" Click="btn_DangXuat_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/icon/logout.png" Width="20" Height="20" Margin="0,0,15,0"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem x:Name="btn_Thoat" Header="Thoát" Margin="5,0,0,5" Click="btn_Thoat_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/icon/power.png" Width="20" Height="20" Margin="0,0,15,0"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Nội dung chính -->
            <ContentControl x:Name="MainContent" Grid.Row="1" Background="{StaticResource MyGradientBrush}" Margin="-11,0,0,0"/>
        </Grid>
    </Grid>
</Window>
