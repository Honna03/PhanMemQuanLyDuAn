<Window x:Class="QuanLyDuAn.Forms.PhanCongCongViec"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyDuAn.Forms"
        mc:Ignorable="d"
        Title="PhanCongCongViec" Height="450" Width="500" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Margin="0, 25, 0,0" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top">Phân công công việc</Label>
        <Grid Margin="30, 70, 30, 30" VerticalAlignment="Top">
            <!-- Định nghĩa 2 cột -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Định nghĩa các hàng -->
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>

            </Grid.RowDefinitions>
            <!-- Tên dự án -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Tên dự án*" Foreground="Black" FontSize="14" Margin="0,15,0,0"/>
            <ComboBox Grid.Row="1" Grid.Column="0" x:Name="cboDuAn" Background="White" Foreground="Black" 
    BorderBrush="#E0E0E0" BorderThickness="1" SelectionChanged="cboDuAn_SelectionChanged"/>
            <!--hoTen-->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Tên công việc*" Foreground="Black" FontSize="14" Margin="0,15,0,0"/>
            <ComboBox Grid.Row="3" Grid.Column="0" x:Name="cboCongViec" Background="White" Foreground="Black" BorderBrush="#E0E0E0" 
    BorderThickness="1" Padding="5" SelectionChanged="cboCongViec_SelectionChanged"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Nhân viên*" Foreground="Black" FontSize="14" Margin="0,15,0,0"/>
            <ComboBox Grid.Row="5" Grid.Column="0" x:Name="cboNhanVien" Background="White" Foreground="Black" BorderBrush="#E0E0E0" 
BorderThickness="1" Padding="5" SelectionChanged="cboNhanVien_SelectionChanged"/>



            <!--<Button x:Name="btnLuu" Grid.Row="10" Grid.Column="0" FontSize="24"  Background="#008080" Foreground="White" Height="60" Width="340" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontWeight="Bold">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/icon/add.png" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Lưu" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>-->


            <!-- Cột 2 -->
            <!-- Tên tập tin -->



            

        </Grid>
        <Grid Margin="30,0, 30, 30" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Định nghĩa các hàng -->
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Button x:Name="btnLuu" Grid.Row="0" Grid.Column="0" FontSize="24"  Background="#008080" Foreground="White"  FontWeight="Bold" Click="btnLuu_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/icon/add.png" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Lưu" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnHuy" Grid.Row="0" Grid.Column="2" FontSize="24"  Background="#808080" Foreground="White"  FontWeight="Bold" Click="btnHuy_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/icon/close.png" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Thoát" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

        </Grid>
    </Grid>
</Window>
