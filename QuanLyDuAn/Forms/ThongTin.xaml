<UserControl x:Class="QuanLyDuAn.Forms.ThongTin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyDuAn.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#ab99f2">
        <!-- Tiêu đề -->
        <TextBlock Text="Thông tin công ty" 
               FontSize="20" FontWeight="Bold" Foreground="White"
               Margin="10,10,0,0"/>

        <!-- Nút Thêm mới -->
        <Button Content="+ Thêm thông tin" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Top"
            Margin="0,10,10,0" 
            Padding="10,5"
            Background="#27AE60" Foreground="White"
            FontWeight="Bold"
            x:Name="btn_AddInfor"
            BorderThickness="0" Cursor="Hand" Click="btn_AddInfor_Click"/>

        <!-- Grid chứa DataGrid và phân trang -->
        <Grid Margin="0,50,0,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <!-- DataGrid -->
                <RowDefinition Height="31.2"/>
                <!-- Phân trang và tổng số bản ghi -->
            </Grid.RowDefinitions>

            <!-- DataGrid -->
            <DataGrid Name="dgInfor" AutoGenerateColumns="False"  IsReadOnly="True"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#E0E0E0"
                  RowBackground="White" AlternatingRowBackground="#F9F9F9"
                  Margin="0,0,0,19" MouseDoubleClick="dgThongTin_MouseDoubleClick">
                <DataGrid.Columns>
                    <!-- Cột STT -->
                    <DataGridTextColumn Header="STT" Binding="{Binding Path=CtyId}" Width="50" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Cột Mã nhân viên -->
                    <DataGridTextColumn Header="Tên công ty" Binding="{Binding Path=CtyTen}" Width="2*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Cột Họ tên -->
                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Path=CtyDiaChi}" Width="2*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Cột Giới tính -->
                    <DataGridTextColumn Header="Số điện thoai" Binding="{Binding Path=CtySdt}" Width="1*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Cột Ngày sinh -->
                    <DataGridTextColumn Header="Email" Binding="{Binding Path=CtyEmail}" Width="1*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Cột Tài khoản -->
                    <DataGridTextColumn Header="Logo" Binding="{Binding Path=CtyLogo}" Width="1*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Cột Mật khẩu -->
                    <DataGridTextColumn Header="Mô tả" Binding="{Binding Path=CtyMoTa}" Width="1*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Phân trang cho DataGrid -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Row="1">
                <Button x:Name="btnPrevPageThongTin" Content="&lt;" Width="25" Height="25" Margin="0,0,0,5" Click="btnPrevPageThongTin_Click"/>
                <TextBlock x:Name="txtPaginationThongTin" Text="1 trong 1" VerticalAlignment="Center" Margin="5,0,5,5"/>
                <Button x:Name="btnNextPageThongTin" Content="&gt;" Width="25" Height="25" Margin="0,0,0,5" Click="btnNextPageThongTin_Click"/>
            </StackPanel>

            <!-- Tổng số bản ghi -->
            <TextBlock x:Name="txtTotalRecords" Text="Tổng số bản ghi: 0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,5" Foreground="White" FontSize="14"/>
        </Grid>
    </Grid>
</UserControl>
