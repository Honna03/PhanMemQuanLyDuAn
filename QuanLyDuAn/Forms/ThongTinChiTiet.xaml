<Window x:Class="QuanLyDuAn.Forms.ThongTinChiTiet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyDuAn.Forms"
        mc:Ignorable="d"
        Title="Thông tin Công ty" Height="600" Width="800" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Label HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="22" FontWeight="Bold" FontFamily="Arial Black" Margin="0,35,0,0">Thông tin Công ty</Label>
        <Grid Margin="50,70,50,0">
            <!-- Định nghĩa 2 cột -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Định nghĩa các hàng -->
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Tên công ty -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Tên công ty *" Foreground="Black" FontSize="14" Margin="0,15,40,0"/>
            <TextBox Grid.Row="1" Grid.Column="0" x:Name="txtTenCongTy" Background="White" Foreground="Black" BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,0,40,5"/>

            <!-- Số điện thoại -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Số điện thoại *" Foreground="Black" FontSize="14" Margin="0,15,40,0"/>
            <TextBox Grid.Row="3" Grid.Column="0" x:Name="txtSDT" Background="White" Foreground="Black" BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,0,40,5"/>

            <!-- Email -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Email *" Foreground="Black" FontSize="14" Margin="0,15,40,0"/>
            <TextBox Grid.Row="5" Grid.Column="0" x:Name="txtEmail" Background="White" Foreground="Black" BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,0,40,5"/>

            <!-- Logo -->
            <TextBlock Grid.Row="4" Grid.Column="1" Text="Logo *" Foreground="Black" FontSize="14" Margin="40,15,0,0"/>
            <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="40,0,0,5">
                <TextBox x:Name="txtLogo" Background="White" Foreground="Black" BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Width="200"/>
                <Button x:Name="btnChonFile" Content="Chọn file" Click="btnChonFile_Click" Margin="5,0,0,0" Width="100"/>
            </StackPanel>

            <!-- Cột 2 -->
            <!-- Địa chỉ -->
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Địa chỉ *" Foreground="Black" FontSize="14" Margin="40,15,0,0"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtDiaChi" Background="White" Foreground="Black" BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="40,0,0,5" AcceptsReturn="True"/>

            <!-- Mô tả -->
            <TextBlock Grid.Row="2" Grid.Column="1" Text="Mô tả *" Foreground="Black" FontSize="14" Margin="40,15,0,0"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtMoTa" Background="White" Foreground="Black" BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="40,0,0,5" AcceptsReturn="True"/>
        </Grid>

        <!-- Nút chức năng -->
        <Grid Margin="50,40,50,60" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Button x:Name="btnSua" Grid.Row="0" Grid.Column="0" Background="#D2691E" Foreground="White" Margin="0,0,0,0" FontSize="24" FontWeight="Bold" Click="btnSua_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/icon/compose.png" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Sửa" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnLuu" Grid.Row="0" Grid.Column="2" Background="#8FBC8F" Foreground="White" Margin="0,0,0,0" FontSize="24" FontWeight="Bold" Click="btnLuu_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/icon/save-instagram.png" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Lưu" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnXoa" Grid.Row="0" Grid.Column="4" Background="#B22222" Foreground="White" Margin="0,0,0,0" FontSize="24" FontWeight="Bold" Click="btnXoa_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/icon/delete.png" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Xóa" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnHuy" Grid.Row="0" Grid.Column="6" Background="#E6E6FA" Foreground="White" Margin="0,0,0,0" FontSize="24" FontWeight="Bold" Click="btnHuy_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/icon/return.png" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Hủy" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnThoat" Grid.Row="0" Grid.Column="8" Background="#D3D3D3" Foreground="White" Margin="0,0,0,0" FontSize="24" FontWeight="Bold" Click="btnThoat_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/icon/close.png" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Thoát" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>