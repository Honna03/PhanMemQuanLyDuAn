<Window x:Class="QuanLyDuAn.Forms.ThongTinNhanVien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyDuAn.Forms"
        
        mc:Ignorable="d"
        Title="ThongTinNhanVien" Height="850" Width="1600" WindowStartupLocation="CenterScreen" WindowState="Maximized" Loaded="Window_Loaded">
    <Grid>
        <Label HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="22" FontWeight="Bold" FontFamily="Arial Black" Margin="0,35,0,0">Thông tin nhân viên</Label>
        <Grid Margin="50,70,50,0">
            <!-- Định nghĩa 2 cột -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Định nghĩa các hàng -->
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>



            </Grid.RowDefinitions>

            <!--hoTen-->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Họ tên *" Foreground="Black" FontSize="14" Margin="0,15,40,0"/>
            <TextBox Grid.Row="1" Grid.Column="0" x:Name="txtHoTen" Background="White" Foreground="Black" BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,0,40,5"/>
            <!--gioiTinh-->
            <!-- Giới tính -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Giới tính *" Foreground="Black" FontSize="14" Margin="0,15,40,0"/>
            <ComboBox Grid.Row="3" Grid.Column="0" x:Name="cbGioiTinh" Background="White" Foreground="Black" 
            BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,0,40,5">
                <ComboBoxItem Content="Nam"/>
                <ComboBoxItem Content="Nữ"/>
            </ComboBox>
            <!-- Ngày sinh -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Ngày sinh *" Foreground="Black" FontSize="14" Margin="0,15,40,0"/>
            <TextBox Grid.Row="5" Grid.Column="0" x:Name="txtNgaySinh" Background="White" Foreground="Black" 
            BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,0,40,5" Text="dd/MM/yyyy"/>
            <!-- Số điện thoại -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Số điện thoại *" Foreground="Black" FontSize="14" Margin="0,15,40,0"/>
            <TextBox Grid.Row="7" Grid.Column="0" x:Name="txtSDT" Background="White" Foreground="Black" 
            BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,0,40,5"/>
            <!-- Email -->
            <TextBlock Grid.Row="8" Grid.Column="0" Text="Email *" Foreground="Black" FontSize="14" Margin="0,15,40,0"/>
            <TextBox Grid.Row="9" Grid.Column="0" x:Name="txtEmail" Background="White" Foreground="Black" 
            BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,0,40,5"/>

           
            <!-- Cột 2 -->
            <!-- Địa chỉ -->
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Địa chỉ" Foreground="Black" FontSize="14" Margin="20,15,20,0"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtDiaChi" Background="White" Foreground="Black" 
            BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="20,0,20,5" AcceptsReturn="True" />


            <!-- Lương cơ bản -->
            <TextBlock Grid.Row="2" Grid.Column="1" Text="Lương cơ bản *" Foreground="Black" FontSize="14" Margin="20,15,20,0"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtLuongCoBan" Background="White" Foreground="Black" 
            BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="20,0,20,5"/>
            <!-- Tài khoản -->
            <TextBlock Grid.Row="4" Grid.Column="1" Text="Tài khoản *" Foreground="Black" FontSize="14" Margin="20,15,20,0"/>
            <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtTaiKhoan" Background="White" Foreground="Black" 
            BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="20,0,20,5"/>

            <!-- Mật khẩu -->
            <TextBlock Grid.Row="6" Grid.Column="1" Text="Mật khẩu *" Foreground="Black" FontSize="14" Margin="20,15,20,0"/>
            <PasswordBox Grid.Row="7" Grid.Column="1" x:Name="txtMatKhau" Background="White" Foreground="Black" 
            BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="20,0,20,5"/>

            <!-- Vị trí -->
            <TextBlock Grid.Row="8" Grid.Column="1" Text="Chức vụ *" Foreground="Black" FontSize="14" Margin="20,15,20,0"/>
            <ComboBox Grid.Row="9" Grid.Column="1" x:Name="cbQuyen" Background="White" Foreground="Black" 
            BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="20,0,20,5" DisplayMemberPath = "QTen" SelectedValuePath = "QMa" ItemsSource="{Binding quyen}" SelectionChanged="cbQuyen_SelectionChanged"/>
            <!--Cột 3-->
            <TextBlock Grid.Row="0" Grid.Column="2" Text="Danh sách dự án:" Foreground="Black" FontSize="14" Margin="40,15,0,0" FontWeight="Bold"/>
            <DataGrid x:Name="dgDuAn" AutoGenerateColumns="False" Grid.Row="1" Grid.Column="2" Grid.RowSpan="4" Margin="40,0,0,5" HeadersVisibility="Column"
            CanUserAddRows="False"
            SelectionMode="Single"
            BorderBrush="#E0E0E0" BorderThickness="1"
            GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#E0E0E0"
            RowBackground="White" AlternatingRowBackground="#F9F9F9" SelectionChanged="dgDuAn_SelectionChanged">
                <DataGrid.Columns>

                    <DataGridTextColumn Header="Mã dự án" Binding="{Binding Path=DaMa}" Width="*" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Tên Dự án" Binding="{Binding Path=DaTen}" Width="*" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Path=TtTen}" Width="*" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>

            <TextBlock Grid.Row="5" Grid.Column="2" Text="Danh sách Công việc:" Foreground="Black" FontSize="14" Margin="40,15,0,0" FontWeight="Bold"/>
            <DataGrid x:Name="dgCongViec"  Grid.Row="6" Grid.Column="2" Grid.RowSpan="4" Margin="40,0,0,5" AutoGenerateColumns="False" 
            HeadersVisibility="Column"
            CanUserAddRows="False"
            SelectionMode="Single"
            BorderBrush="#E0E0E0" BorderThickness="1"
            GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#E0E0E0"
            RowBackground="White" AlternatingRowBackground="#F9F9F9">
                <DataGrid.Columns>
                    
                    <DataGridTextColumn Header="Mã công việc" Binding="{Binding Path=CvId}" Width="*" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Tên công việc" Binding="{Binding Path=CvTen}" Width="*" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Path=TtMaNavigation.TtTen}" Width="*" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Margin="50, 40, 50, 60" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
                
            <!-- Định nghĩa các hàng -->
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Button x:Name="btnSua" Grid.Row="0" Grid.Column="0" Background="#D2691E" Foreground="White"  Margin="0,0,0,0" FontSize="24" FontWeight="Bold" Click="btnSua_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/icon/compose.png" Width="20" Height="20" Margin="0,0,10,0"/>
                    
                    <TextBlock Text="Sửa" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnLuu" Grid.Row="0" Grid.Column="2" Background="#8FBC8F" Foreground="White"  Margin="0,0,0,0" FontSize="24" FontWeight="Bold" Click="btnLuu_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/icon/save-instagram.png" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Lưu" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnXoa" Grid.Row="0" Grid.Column="4" Background="#B22222" Foreground="White"  Margin="0,0,0,0" FontSize="24" FontWeight="Bold" Click="btnXoa_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/icon/delete.png" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Xóa" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnHuy" Grid.Row="0" Grid.Column="6" Background="#E6E6FA" Foreground="White"  Margin="0,0,0,0" FontSize="24" FontWeight="Bold" Click="btnHuy_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/icon/return.png" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Hủy" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnThoat" Grid.Row="0" Grid.Column="8" Background="#D3D3D3" Foreground="White"  Margin="0,0,0,0" FontSize="24" FontWeight="Bold">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/icon/close.png" Width="20" Height="20" Margin="0,0,10,0"/>
                    
                    <TextBlock Text="Thoát" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
